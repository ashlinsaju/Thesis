keywords = {activity recognition,air quality sensing,exposure estimation,participatory sensing},
mendeley-groups = {Literature},
number = {3},
pages = {303--305},
title = {{ExposureSense: Integrating daily activities with air quality using mobile participatory sensing}},
year = {2013}
}

@article{Hasenfratz2012,
abstract = {Air quality monitoring is extremely important as air pollution has a direct impact on human health. In this paper we introduce a low-power and low-cost mobile sensing system for participatory air quality monitoring. In contrast to traditional stationary air pollution monitoring stations, we present the design, implementation, and evaluation of Gas- Mobile, a small and portable measurement system based on o -the-shelf components and suited to be used by a large number of people. Vital to the success of participatory sensing applications is a high data quality. We improve measurement accuracy by (i) exploiting sensor readings near governmental measurement stations to keep sensor calibration up to date and (ii) analyzing the e ect of mobility on the accuracy of the sensor readings to give user advice on measurement execution. Finally, we show that it is feasible to use GasMobile to create collective high-resolution air pollution maps.},
author = {Hasenfratz, David and Saukh, Olga and Sturzenegger, Silvan and Thiele, Lothar},
file = {:C$\backslash$:/Users/Ashlin/Downloads/HSST2012.pdf:pdf},
isbn = {9781450312271},
