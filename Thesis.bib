@article{Valli2013,
abstract = {BACKGROUND: The ventilatory compensation point (VCP) is an exercise threshold which has been used in the design of training programs in sports medicine and rehabilitation. We recently demonstrated that changes in the slope of the minute ventilation to heart rate relationship ($\Delta$V˙E/$\Delta$HR) can be utilized for estimation of the VCP during incremental exercise at sea level (SL). We hypothesized that in hypoxic conditions, such as high altitude (HA), VCP can be also reliably estimated by $\Delta$V˙E/$\Delta$HR.$\backslash$n$\backslash$nMETHODS: At SL and on immediate ascent to HA (5,050 m), six healthy subjects (42 ± 14 SD years) performed a maximal incremental exercise test on a cycle ergometer; O2 uptake (V˙O2), CO2 output (V˙CO2), V˙E, and HR were measured breath-by-breath. The $\Delta$V˙E/$\Delta$HR method for VCP estimation was compared to the standard method using the ventilatory equivalent for CO2 (V˙E/V˙CO2) and end-tidal PCO2 (PETCO2). The $\Delta$V˙E/$\Delta$HR slope values below (S1) and above (S2) VCP were computed by linear regression analysis.$\backslash$n$\backslash$nRESULTS: A significant difference between S1 and S2 was observed, at SL and HA, for both the $\Delta$V˙E/$\Delta$HR and V˙E/V˙CO2 methods for VCP estimation. A good agreement between the two methods ($\Delta$V˙E/$\Delta$HR vs. V˙E/V˙CO2) was found for both environmental conditions; the mean difference ± 2 SD of V˙O2 at VCP (VCP-V˙O2) was -22 ± 112 ml/min at SL and 39 ± 81 ml/min at HA. The VCP-V˙O2 was significantly lower at HA compared to SL; in addition, S1 and S2 mean values were significantly higher at HA compared to SL.$\backslash$n$\backslash$nCONCLUSION: At HA, VCP may be reliably estimated by the $\Delta$V˙E/$\Delta$HR method.},
author = {Valli, Gabriele and Internullo, Mattia and Ferrazza, Alessandro M. and Onorati, Paolo and Cogo, Annalisa and Palange, Paolo},
doi = {10.1186/2046-7648-2-7},
file = {:C$\backslash$:/Users/Ashlin/Downloads/2046-7648-2-7.pdf:pdf},
issn = {20467648},
journal = {Extreme Physiology and Medicine},
keywords = {Exercise,Heart rate,High altitude,Ventilation,Ventilatory compensation point},
mendeley-groups = {Literature},
number = {1},
pages = {1},
title = {{Minute ventilation and heart rate relationship for estimation of the ventilatory compensation point at high altitude: A pilot study}},
