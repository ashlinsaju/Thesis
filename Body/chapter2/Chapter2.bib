journal = {Sensors},
keywords = {Android mobile application,environmental monitoring system,global positioning system,low-cost sensor},
number = {11},
pages = {22065--22081},
pmid = {25420154},
title = {{Development of a Personal Integrated Environmental Monitoring System}},
url = {http://www.mdpi.com/1424-8220/14/11/22065/},
volume = {14},
