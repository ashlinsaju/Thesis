keywords = {Air quality,Opportunistic crowd-sensing,Sensing device},
mendeley-groups = {refer},
pages = {42:1----42:6},
title = {{Towards Smart City: Sensing Air Quality in City Based on Opportunistic Crowd-sensing}},
